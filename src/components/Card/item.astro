---
import { Image } from "@unpic/astro";
interface Props {
  href: string;
  src: string;
  title: string;
  tags: string[];
}

const { href, src, title, tags } = Astro.props;
---

<article>
  <Image
    src={"/thumbnails/" + src + ".png"}
    layout="constrained"
    width={480}
    height={128}
    background="#8a2be2"
    alt={title}
  />
  <div class="card-info">
    <h3>
      <a href={href}>{title}</a>
    </h3>

    <div class="tags">
      {tags.map((tag) => <span>{tag}</span>)}
    </div>
  </div>
</article>
<style>
  .card-info,
  .tags {
    display: flex;
    flex-wrap: wrap;
    column-gap: 1rem;
  }
  .card-info {
    justify-content: space-between;
    align-items: baseline;
    padding: 0 0.1rem;
  }
  .tags span {
    background-color: white;
    padding: 0.4rem;
  }
</style>
