---
import Header from "../components/Header.astro";
import AnchorStyles from "../styles/Anchor.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    --grid-size: 100px;
  }

  body {
    padding: 0;
    margin: 0;
    background: linear-gradient(-15deg, #7266f451, #29f6a151) fixed;
    position: relative;
  }
  body::before {
    content: "";
    z-index: -1;
    opacity: 0.2;
    width: 100%;
    height: 100%;
    position: absolute;
    background: url("/grid.png");
    background-size: var(--grid-size);
  }
  main {
    padding-top: 5rem;
  }

  a,
  span,
  button,
  h2,
  h3 {
    font-family: "Itim", "Poppins", sans-serif;
  }
  p,
  h1 {
    font-family: "Poppins", sans-serif;
  }
  @font-face {
    font-family: Pacifico;
    src: url(/fonts/Pacifico-Regular.ttf);
  }
  @font-face {
    font-family: Poppins;
    src: url(/fonts/Poppins-Regular.ttf);
  }

  @font-face {
    font-family: Arch;
    src: url(/fonts/ArchitectsDaughter-Regular.ttf);
  }

  @font-face {
    font-family: Itim;
    src: url(/fonts/Itim-Regular.ttf);
  }

  @font-face {
    font-family: Maconda;
    src: url(/fonts/Macondo-Regular.ttf);
  }
  a {
    text-decoration: none;
  }
</style>
